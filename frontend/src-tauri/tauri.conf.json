{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev -- --host 127.0.0.1 --port 5173",
    "devPath": "http://localhost:5173/widget",
    "distDir": "../dist"
  },
  "package": {
    "productName": "GravexWidget",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "label": "widget",
        "title": "Gravex Widget",
        "width": 420,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": ["app"],
      "identifier": "com.intelligravex.widget",
      "externalBin": [
        "../../dist/GravexStudio/GravexStudio"
      ],
      "icon": ["icons/icon.icns"],
      "macOS": {}
    },
    "allowlist": {
      "all": false
    }
  }
}
