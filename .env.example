OPENAI_API_KEY=
VOICEBOT_OPENAI_MODEL=gpt-4o
VOICEBOT_SYSTEM_PROMPT=You are a fast, helpful voice assistant. Keep answers concise unless asked.
VOICEBOT_LANGUAGE=en

# Studio / DB
VOICEBOT_DB_URL=sqlite:///voicebot.db
# Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
VOICEBOT_SECRET_KEY=

# Optional: used by the Studio to estimate per-conversation cost.
# Example:
# OPENAI_PRICING_JSON='{"gpt-4o":{"input_per_1m":5,"output_per_1m":15}}'
OPENAI_PRICING_JSON='{{"gpt-4o":{"input_per_1m":5,"output_per_1m":15},"o4-mini":{"input_per_1m":4,"output_per_1m":16},"gpt-5":{"input_per_1m":1.25,"output_per_1m":10},"gpt-5-chat-latest":{"input_per_1m":1.25,"output_per_1m":10},"gpt-5-mini":{"input_per_1m":0.25,"output_per_1m":2},"gpt-5-nano":{"input_per_1m":0.05,"output_per_1m":0.4},"gpt-5.1":{"input_per_1m":1.25,"output_per_1m":10},"gpt-5.1-chat-latest":{"input_per_1m":1.25,"output_per_1m":10},"gpt-4.1":{"input_per_1m":2,"output_per_1m":8},"gpt-4.1-mini":{"input_per_1m":0.4,"output_per_1m":1.6},"gpt-4.1-nano":{"input_per_1m":0.1,"output_per_1m":0.4}}'

# Whisper
VOICEBOT_WHISPER_MODEL=small
VOICEBOT_WHISPER_DEVICE=auto

# VAD
VOICEBOT_VAD_AGGRESSIVENESS=2
VOICEBOT_VAD_SILENCE_MS=800
VOICEBOT_VAD_MIN_SPEECH_MS=250
VOICEBOT_VAD_MAX_SPEECH_MS=15000

# Audio
VOICEBOT_INPUT_DEVICE=
VOICEBOT_OUTPUT_DEVICE=
VOICEBOT_INPUT_SAMPLE_RATE=16000
VOICEBOT_OUTPUT_SAMPLE_RATE=24000

# Turn-taking / echo avoidance
VOICEBOT_MIC_MUTE_DURING_TTS=true
VOICEBOT_TTS_MIC_RELEASE_MS=500

# Performance
VOICEBOT_TTS_USE_GPU=true
VOICEBOT_TTS_SPLIT_SENTENCES=false
VOICEBOT_TTS_CHUNK_MIN_CHARS=20
VOICEBOT_TTS_CHUNK_MAX_CHARS=120

# XTTS v2
VOICEBOT_XTTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
VOICEBOT_SPEAKER_WAV=
VOICEBOT_SPEAKER_ID=
VOICEBOT_TTS_LANGUAGE=en
